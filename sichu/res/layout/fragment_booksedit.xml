<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView android:id="@+id/img_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/txt_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button android:id="@+id/btn_douban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View On DouBan"/>

    <Spinner android:id="@+id/spin_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/bookown_status" />

    <EditText
        android:id="@+id/edit_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Remark" />
    
    <Button android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"/>
    
    <Button android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>

</LinearLayout>